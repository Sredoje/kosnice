<p id="notice"><%= notice %></p>

<h1>Listing Apiaries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Hive type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apiaries.each do |apiary| %>
      <tr>
        <td><%= apiary.name %></td>
        <td><%= apiary.location %></td>
        <td><%= apiary.hive_type %></td>
        <td><%= apiary.user_id %></td>
        <td><%= link_to 'Show', apiary %></td>
        <td><%= link_to 'Edit', edit_apiary_path(apiary) %></td>
        <td><%= link_to 'Destroy', apiary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

