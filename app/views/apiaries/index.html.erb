<p id="notice"><%= notice %></p>
<div class="row">
	<% @apiaries.each do |apiary| %>
	<div class="row">
		<div class="apiary-header">
			<h2>
				<%= apiary.name %>
			</h2>
			<%= link_to 'Edit', edit_apiary_path(apiary), class: 'btn btn-primary' %>
			<%= link_to 'Destroy', apiary, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
		</div>
		
		<p>Location:</p>
		<div id="map"></div>
   		<% if apiary.hives %>
   		<div class="hives">
   			<div class="scrollable">
			<% apiary.hives.each do |hive| %>
				<%= render 'hive', hive:hive %>
			<% end %>
			</div>
		</div>
	</div>
	<% end %>
 </div>
 <% end %>
