<!DOCTYPE html>
<html>
<head>
  <title>Kosnice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '**defaults**', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
	<% if current_user %>
		Ulogovani ste kao <%= current_user.email %>
		<%= link_to "Izloguj se", log_out_path %>
	<% else %>
		<%= link_to "Registruj se", sign_up_path %>
		<%= link_to "Uloguj se", log_in_path %>
	<% end %>
<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id =>"flash_#{name}" %>
<% end %>
<%= yield %>

</body>
</html>
